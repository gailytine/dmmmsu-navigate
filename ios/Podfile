platform :ios, '13.0'
use_frameworks!

flutter_application_path = '../'

# Try loading podhelper.rb (standard Flutter plugin management)
begin
  load File.join(flutter_application_path, 'ios', 'Flutter', 'podhelper.rb')
rescue LoadError => e
  puts "Warning: Failed to load podhelper.rb. Using direct pod fallback. (#{e.message})"

  flutter_engine_path = File.join(ENV['FLUTTER_ROOT'], 'bin', 'cache', 'artifacts', 'engine', 'ios')
  
  target 'Runner' do
    pod 'Flutter', :path => flutter_engine_path
  end
else
  target 'Runner' do
    install_all_flutter_pods(flutter_application_path)
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
    end
  end
end
