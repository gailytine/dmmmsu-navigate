platform :ios, '13.0'
use_frameworks!

# Add this at the TOP - points directly to Flutter engine
flutter_engine_path = File.join(ENV['FLUTTER_ROOT'], 'bin', 'cache', 'artifacts', 'engine', 'ios')

# Keep existing but add fallback
flutter_application_path = '../'
begin
  load File.join(flutter_application_path, 'ios', 'Flutter', 'podhelper.rb')
rescue LoadError
  # Fallback to direct engine reference
  target 'Runner' do
    pod 'Flutter', :path => flutter_engine_path
  end
end

target 'Runner' do
  install_all_flutter_pods(flutter_application_path) if defined?(install_all_flutter_pods)
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      # Add this for newer Flutter versions
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
    end
  end
end