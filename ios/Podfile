platform :ios, '13.0'
use_frameworks!

# Add this at the TOP
flutter_engine_path = File.join(ENV['FLUTTER_ROOT'], 'bin', 'cache', 'artifacts', 'engine', 'ios')

target 'Runner' do
  # Primary method (try standard Flutter integration first)
  begin
    flutter_application_path = '../'
    load File.join(flutter_application_path, 'ios', 'Flutter', 'podhelper.rb')
    install_all_flutter_pods(flutter_application_path)
  rescue LoadError
    # Fallback method (direct engine reference)
    pod 'Flutter', :path => flutter_engine_path
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
    end
  end
end